@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <!-- Для авторизованных пользователей -->
    <div class="d-flex align-items-center">
        <!-- Корзина -->
        <div class="me-3">
            @await Component.InvokeAsync("Cart")
        </div>

        <!-- Аватар и меню -->
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center"
                    type="button" id="dropdownMenuButton"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                <!-- Аватар -->
                <img img-action="GetAvatar"
                     img-controller="Image"
                     width="30" height="30"
                     alt="User"
                     class="rounded-circle me-2" />
                <!-- Имя пользователя -->
                <span class="text-light">@User.Identity?.Name</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                <li>
                    <span class="dropdown-item-text d-flex align-items-center">
                        <img img-action="GetAvatar"
                             img-controller="Image"
                             width="40" height="40"
                             alt="User"
                             class="rounded-circle me-2" />
                        <div>
                            <strong>@User.Identity?.Name</strong>
                        </div>
                    </span>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity"
                          asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="dropdown-item">
                            <i class="fas fa-sign-out-alt me-2"></i>Выйти
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
}
else
{
    <!-- Для неавторизованных пользователей -->
    <div class="d-flex align-items-center">
        <a asp-area="Identity"
           asp-page="/Account/Register"
           class="nav-link text-light me-3">
            <i class="fas fa-user-plus me-1"></i>Регистрация
        </a>
        <a asp-area="Identity"
           asp-page="/Account/Login"
           class="nav-link text-light">
            <i class="fas fa-sign-in-alt me-1"></i>Войти
        </a>
    </div>
}