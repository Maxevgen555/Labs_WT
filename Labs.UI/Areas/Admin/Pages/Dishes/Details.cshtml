@page
@model Labs.UI.Areas.Admin.Pages.Dishes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Dish</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dish.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dish.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dish.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dish.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dish.Calories)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dish.Calories)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dish.Image)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Dish.Image))
            {
                <img src="@Model.Dish.Image" alt="Image" style="max-width: 200px;" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dish.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dish.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Dish.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
