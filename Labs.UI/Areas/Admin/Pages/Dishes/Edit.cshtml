@page
@model Labs.UI.Areas.Admin.Pages.Dishes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dish.Id" />
            <div class="form-group">
                <label asp-for="Dish.Name" class="control-label"></label>
                <input asp-for="Dish.Name" class="form-control" />
                <span asp-validation-for="Dish.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Description" class="control-label"></label>
                <input asp-for="Dish.Description" class="form-control" />
                <span asp-validation-for="Dish.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Calories" class="control-label"></label>
                <input asp-for="Dish.Calories" class="form-control" />
                <span asp-validation-for="Dish.Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.CategoryId" class="control-label"></label>
                <select asp-for="Dish.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label>Текущее изображение:</label>
                @if (!string.IsNullOrEmpty(Model.Dish.Image))
                {
                    <img src="@Model.Dish.Image" alt="Current image" style="max-width: 200px; display: block; margin: 10px 0;" />
                }
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Новое изображение (оставьте пустым, чтобы не менять)</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
