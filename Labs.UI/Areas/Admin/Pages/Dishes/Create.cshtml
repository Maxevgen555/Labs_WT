@page
@model Labs.UI.Areas.Admin.Pages.Dishes.CreateModel
@{
    ViewData["Title"] = "Добавить блюдо";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Добавить новое блюдо</h2>
            <hr />

            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Dish.Name" class="form-label"></label>
                    <input asp-for="Dish.Name" class="form-control" />
                    <span asp-validation-for="Dish.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dish.Description" class="form-label"></label>
                    <textarea asp-for="Dish.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Dish.Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Dish.Calories" class="form-label"></label>
                            <input asp-for="Dish.Calories" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Dish.Calories" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Dish.CategoryId" class="form-label"></label>
                            <select asp-for="Dish.CategoryId" asp-items="Model.Categories" class="form-control">
                                <option value="">-- Выберите категорию --</option>
                            </select>
                            <span asp-validation-for="Dish.CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Dish.Image" class="form-label">URL изображения</label>
                    <input asp-for="Dish.Image" class="form-control" />
                    <small class="form-text text-muted">Или загрузите изображение ниже</small>
                    <span asp-validation-for="Dish.Image" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Загрузить изображение</label>
                    <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
                    <button type="submit" class="btn btn-primary">Создать блюдо</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
