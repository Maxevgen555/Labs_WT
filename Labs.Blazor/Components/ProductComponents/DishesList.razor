@implements IDisposable

<div class="table-responsive">
    <table class="table table-hover mb-0">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th class="text-center">Калории</th>
                <th>Категория</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @if (ProductService?.Products == null || !ProductService.Products.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        <i class="bi bi-emoji-frown fs-1"></i>
                        <p class="mt-2">Нет блюд для отображения</p>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in ProductService.Products)
                {
                    <tr>
                        <td class="fw-bold">@item.Id</td>
                        <td>@item.Name</td>
                        <td class="text-center">
                            <span class="badge @GetCaloriesBadge(item.Calories)">
                                @item.Calories
                            </span>
                        </td>
                        <td>
                            @if (item.Category != null)
                            {
                                <span class="badge bg-secondary">
                                    @item.Category.Name
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td class="text-center">
                            <button class="btn btn-outline-primary btn-sm"
                                    @onclick="() => SelectDish(item.Id)">
                                Подробно
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code {
    [CascadingParameter]
    public IProductService<BlazorDishModel>? ProductService { get; set; }

    [Parameter]
    public EventCallback<int> DishSelected { get; set; }

    private string GetCaloriesBadge(int calories)
    {
        if (calories < 200) return "bg-success";
        if (calories < 400) return "bg-warning";
        return "bg-danger";
    }

    private async Task SelectDish(int id)
    {
        await DishSelected.InvokeAsync(id);
    }

    protected override void OnInitialized()
    {
        if (ProductService != null)
        {
            ProductService.ListChanged += StateHasChanged;
        }
    }

    public void Dispose()
    {
        if (ProductService != null)
        {
            ProductService.ListChanged -= StateHasChanged;
        }
    }
}