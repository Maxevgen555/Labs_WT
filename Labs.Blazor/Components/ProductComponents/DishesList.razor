@implements IDisposable
@using Labs.Blazor.Services
@using Labs.Blazor.Models

<h3>Блюда дня</h3>

@if (ProductService.Products != null && ProductService.Products.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Калории</th>
                <th>Категория</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ProductService.Products)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Calories</td>
                    <td>@(item.Category?.Name ?? "Нет категории")</td>
                    <td>
                        <button class="btn btn-outline-dark"
                                @onclick="@(() => OnDishSelected(item.Id))">
                            Подробно
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Нет доступных блюд</div>
}

@code {
    [CascadingParameter]
    public IProductService<Dish> ProductService { get; set; } = default!;

    [Parameter]
    public EventCallback<int> DishSelected { get; set; }

    protected override void OnInitialized()
    {
        if (ProductService != null)
        {
            ProductService.ListChanged += StateHasChanged;
        }
    }

    private async Task OnDishSelected(int id)
    {
        await DishSelected.InvokeAsync(id);
    }

    public void Dispose()
    {
        if (ProductService != null)
        {
            ProductService.ListChanged -= StateHasChanged;
        }
    }
}